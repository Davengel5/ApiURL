RewriteEngine On
RewriteBase /AcortadorURL/

# Redirección para URLs cortas (ej: /AbCd12)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9]{6})$ api/index.php?slug=$1 [L]

# Protección de archivos sensibles
<FilesMatch "\.(db|sql|ini|log)$">
    Require all denied
</FilesMatch>

# Prevenir listado de directorios
Options -Indexes

# Manejo de errores personalizado
ErrorDocument 404 /AcortadorURL/api/index.php
ErrorDocument 500 /AcortadorURL/api/index.php

# API endpoint
RewriteRule ^api$ api/api.php [L]